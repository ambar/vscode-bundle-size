{
  "name": "bundle-size",
  "displayName": "Bundle Size",
  "description": "Display the bundle size of npm packages",
  "version": "1.2.0",
  "license": "MIT",
  "publisher": "ambar",
  "private": true,
  "engines": {
    "vscode": "^1.53.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "url": "https://github.com/ambar/vscode-bundle-size.git",
    "directory": "vscode-bundle-size"
  },
  "icon": "images/measure.png",
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "keywords": [
    "package",
    "bundle",
    "size",
    "npm",
    "module",
    "import",
    "measure",
    "esbuild"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Bundle Size",
      "properties": {
        "bundleSize.cache": {
          "type": "boolean",
          "default": true,
          "description": "Wether to cache the bundle result (it's highly recommended to turn on, unless you are debugging or want to edit files in dependences)"
        },
        "bundleSize.cautionSize": {
          "type": "number",
          "default": 50,
          "description": "Size limit in KB, display caution color if exceeded"
        },
        "bundleSize.dangerSize": {
          "type": "number",
          "default": 100,
          "description": "Size limit in KB, display danger color if exceeded"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "cp ../README.md . && yarn run build:esbuild --minify",
    "vspack": "vsce package --yarn",
    "prebuild": "rm -rf out/**",
    "watch": "tsc -watch",
    "build": "tsc",
    "build:esbuild": "esbuild --bundle src/extension.ts --outfile=$npm_package_main --format=cjs --platform=node --external:vscode --external:esbuild",
    "pretest": "yarn run build && yarn run lint",
    "test": "jest --passWithNoTests"
  },
  "dependencies": {
    "esbuild": "^0.13.5"
  },
  "devDependencies": {
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.53.0",
    "measure-bundle-size": "^1.1.0",
    "pretty-format": "^27.3.1",
    "typescript": "^4.4.4"
  }
}
