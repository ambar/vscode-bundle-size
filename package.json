{
  "private": true,
  "workspaces": [
    "*-size"
  ],
  "scripts": {
    "watch": "tsc -b --watch measure-bundle-size vscode-bundle-size",
    "build": "yarn workspaces run build",
    "lint": "recommended",
    "test": "yarn jest"
  },
  "jest": {
    "preset": "es-jest"
  },
  "prettier": "@recommended/prettier-config",
  "eslintConfig": {
    "extends": [
      "@recommended/eslint-config"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "^_",
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "es-jest": "^1.4.1",
    "esbuild": "^0.15",
    "jest": "^27.3.1",
    "prettier": "^2.4.1",
    "recommended": "^0.0.7",
    "typescript": "^4.8.4"
  }
}
